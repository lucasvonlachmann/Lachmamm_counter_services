<p id="notice"><%= notice %></p>

<h1>Counter Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hour</th>
      <th>Branch</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @counter_schedules.each do |counter_schedule| %>
      <tr>
        <td><%= counter_schedule.date.strftime("%d/%m/%Y") %></td>
        <td><%= counter_schedule.hour.strftime("%H:%M") %></td>
        <td><%= counter_schedule.branch.name %></td>
        <td><%= link_to 'Show', counter_schedule %></td>
        <td><%= link_to 'Edit', edit_counter_schedule_path(counter_schedule) %></td>
        <td><%= link_to 'Destroy', counter_schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

